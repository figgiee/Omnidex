{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main",
  "description": "Main window capabilities with minimal required permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:window:default",
    "dialog:allow-open",
    "fs:allow-read-dir",
    "fs:allow-read-file",
    "log:allow-log"
  ],
  "platforms": ["linux", "macOS", "windows"]
} 